<h1>Listing Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Vencimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td>
          <%= "Purificador" if produto.tipo == 1 %>
          <%= "CÃ¢mara" if produto.tipo == 2 %>
        </td>
        <td>
          <%= "12 Meses" if produto.vencimento == 1%>
          <%= "24 Meses" if produto.vencimento == 2%>
        </td>
        <td><%= link_to 'Show', produto %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

